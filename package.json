{
  "name": "eslint-plugin-sxzz",
  "version": "0.2.0",
  "packageManager": "pnpm@10.5.0",
  "description": "A collection of ESLint rules.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/eslint-plugin-sxzz#readme",
  "bugs": {
    "url": "https://github.com/sxzz/eslint-plugin-sxzz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/eslint-plugin-sxzz.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^5.1.1",
    "@sxzz/prettier-config": "^2.2.0",
    "@types/node": "^22.13.5",
    "@typescript-eslint/parser": "^8.25.0",
    "@typescript-eslint/utils": "^8.25.0",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "eslint-vitest-rule-tester": "^1.1.0",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "resolutions": {
    "eslint-plugin-sxzz": "workspace:*"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
