{
  "name": "eslint-plugin-sxzz",
  "type": "module",
  "version": "0.4.2",
  "packageManager": "pnpm@10.29.2",
  "description": "A collection of ESLint rules.",
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/sxzz",
  "homepage": "https://github.com/sxzz/eslint-plugin-sxzz#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/eslint-plugin-sxzz.git"
  },
  "bugs": {
    "url": "https://github.com/sxzz/eslint-plugin-sxzz/issues"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "eslint-typegen.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsx scripts/typegen.ts && tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsgo --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.7.0",
    "@sxzz/prettier-config": "^2.3.1",
    "@types/node": "^25.2.2",
    "@typescript-eslint/parser": "^8.54.0",
    "@typescript-eslint/utils": "^8.54.0",
    "@typescript/native-preview": "^7.0.0-dev.20260209.1",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.0",
    "eslint-typegen": "^2.3.0",
    "eslint-vitest-rule-tester": "^3.1.0",
    "jsonc-eslint-parser": "^2.4.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.20.3",
    "tsdown-preset-sxzz": "^0.3.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "resolutions": {
    "eslint-plugin-sxzz": "workspace:*"
  },
  "prettier": "@sxzz/prettier-config"
}
