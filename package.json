{
  "name": "eslint-plugin-sxzz",
  "version": "0.3.0",
  "packageManager": "pnpm@10.13.1",
  "description": "A collection of ESLint rules.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/eslint-plugin-sxzz#readme",
  "bugs": {
    "url": "https://github.com/sxzz/eslint-plugin-sxzz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/eslint-plugin-sxzz.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.0.5",
    "@sxzz/prettier-config": "^2.2.3",
    "@types/node": "^24.0.13",
    "@typescript-eslint/parser": "^8.36.0",
    "@typescript-eslint/utils": "^8.36.0",
    "@typescript/native-preview": "^7.0.0-dev.20250712.1",
    "bumpp": "^10.2.0",
    "eslint": "^9.31.0",
    "eslint-vitest-rule-tester": "^2.2.0",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "resolutions": {
    "eslint-plugin-sxzz": "workspace:*"
  },
  "prettier": "@sxzz/prettier-config"
}
