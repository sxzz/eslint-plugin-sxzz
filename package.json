{
  "name": "eslint-plugin-sxzz",
  "version": "0.3.0",
  "packageManager": "pnpm@10.11.0",
  "description": "A collection of ESLint rules.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/eslint-plugin-sxzz#readme",
  "bugs": {
    "url": "https://github.com/sxzz/eslint-plugin-sxzz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/eslint-plugin-sxzz.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.0.1",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/node": "^22.15.19",
    "@typescript-eslint/parser": "^8.32.1",
    "@typescript-eslint/utils": "^8.32.1",
    "bumpp": "^10.1.1",
    "eslint": "^9.27.0",
    "eslint-vitest-rule-tester": "^2.2.0",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.11.11",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "resolutions": {
    "eslint-plugin-sxzz": "workspace:*"
  },
  "prettier": "@sxzz/prettier-config"
}
