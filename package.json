{
  "name": "eslint-plugin-sxzz",
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "description": "A collection of ESLint rules.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/eslint-plugin-sxzz#readme",
  "bugs": {
    "url": "https://github.com/sxzz/eslint-plugin-sxzz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/eslint-plugin-sxzz.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^4.5.1",
    "@sxzz/prettier-config": "^2.0.2",
    "@types/node": "^22.10.2",
    "bumpp": "^9.9.1",
    "eslint": "^9.17.0",
    "eslint-vitest-rule-tester": "^0.7.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "resolutions": {
    "eslint-plugin-sxzz": "workspace:*"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
